<div class="container">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
      <h1 class="text-center login-title">Register as Advertiser!</h1>
      <div class="account-wall">
        <img class="profile-img" src="/images/signin-photo.jpg" alt="">
        <% if(flash && flash.err) { %>
        <p class="text-center text-danger">
          <%= flash.err %>
        </p>        
        <% } %>        
        <form class="form-signin" action="/advertiser/create" method="POST">
          <input id="email" name="email" type="email" class="form-control" placeholder="Email" required autofocus>
          <input id="password" name="password" type="password" class="form-control" placeholder="Password" required>
          <input id="confirm-password" name="confirm-password" type="password" class="form-control" placeholder="Confirm password" onkeyup="checkPass(); return false;" required>
          <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Up</button>
          <a href="#" class="pull-right need-help">Need help? </a><span class="clearfix"></span>
          <input type="hidden" name="_csrf" value="<%= _csrf %>" />          
        </form>
      </div>
      <a href="/advertiser/login" class="text-center new-account">Already have an account?</a>
    </div>
  </div>
</div>
