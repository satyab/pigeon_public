<div class="container">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
      <h1 class="text-center login-title">Create a Campaign!</h1>
      <div class="account-wall">
        <% if(flash && flash.err) { %>
        <p class="text-center text-danger">
          <%= flash.err %>
        </p>        
        <% } %>
        <form class="form-signin form-group" action="/campaign/create" method="POST">
          <input id="name" name="name" type="text" class="form-control" placeholder="Campaign Name" required autofocus>
          <div class="form-group">
            <select name="revenueTypeId" class="form-control">
              <% for ( i in revenueTypes ) { %>
              <option value="<%=revenueTypes[i].id%>"><%=revenueTypes[i].name%></option>
              <%}%>
            </select>
          </div>
          <input id="frequencyCap" name="frequencyCap" type="text" class="form-control hidden" placeholder="Frequency Cap" value="0" />
          <input id="priority" name="priority" type="text" class="form-control hidden" placeholder="priority" value="0"/>
          <input id="limit" name="limit" type="text" class="form-control" placeholder="Limit" /> 
          <div class="input-daterange input-group form-group" id="datepicker">
            <input type="text" class="input-sm form-control" name="startDate" />
            <span class="input-group-addon">To</span>
            <input type="text" class="input-sm form-control" name="endDate" />
          </div>
           <div class="form-group">
            <select name="categories[]" class="multiselect" multiple="multiple">
              <% for ( i in categories ) { %>
              <option value="<%=categories[i].id%>"><%=categories[i].category%></option>
              <%}%>
            </select>
          </div>          
          <button class="btn btn-lg btn-primary btn-block" type="submit">Create Campaign</button>
          <input type="hidden" name="_csrf" value="<%= _csrf %>" />          
        </form>
      </div>
    </div>
  </div>
</div>
